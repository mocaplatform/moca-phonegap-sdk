    <!-- android -->
    <platform name="android">    
        <framework src="src/android/mocabuild.gradle" custom="true" type="gradleReference" />

        <config-file target="config.xml" parent="/widget">
             <feature name="MOCAPlugin">
                <param name="android-package" value="com.innoquant.moca.phonegap.MOCAPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">            
            <!-- Required for MOCA SDK -->
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.permission.BLUETOOTH" />
            <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
            <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

            <!-- Keeps the processor from sleeping when a message is received. -->
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <!-- Required for Push -->
            <uses-permission android:name="android.permission.VIBRATE" />
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <!-- Used to collect battery stats -->
            <uses-permission android:name="android.permission.BATTERY_STATS" />
            <!-- Used to collect carrier -->
            <uses-permission android:name="android.permission.READ_PHONE_STATE" />
            <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
            <uses-permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" />
            <permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" android:protectionLevel="signature" />
            <permission android:name="$PACKAGE_NAME.permission.MOCA_DATA" android:protectionLevel="signature" />
            <uses-permission android:name="$PACKAGE_NAME.permission.MOCA_DATA" />
        </config-file>    


        <config-file target="AndroidManifest.xml" parent="/manifest/application">

            <!-- REQUIRED for MOCA. -->
	    <receiver
            	android:name="com.innoquant.moca.MOCACoreReceiver"
            	android:exported="true">
            	<intent-filter>
                	<action android:name="com.innoquant.moca.ACTION_SYNC" />
                	<action android:name="com.innoquant.moca.ACTION_UPLOAD" />
                	<action android:name="android.intent.action.BOOT_COMPLETED" />
                	<action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                	<action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            	</intent-filter>
            </receiver>

            <service
                android:name="com.innoquant.moca.drivers.alt.service.BeaconService"
                android:enabled="true"
                android:exported="true"
                android:isolatedProcess="false"
                android:label="Beacon driver service" />

 	    <service android:name="com.innoquant.moca.services.SyncService" android:enabled="true" />
	    <service android:name="com.innoquant.moca.push.PushService" android:enabled="true" />
            
        <service android:name="com.innoquant.moca.drivers.alt.BeaconIntentProcessor" android:enabled="true" />

            <activity
                android:name="com.innoquant.moca.ui.AlertDialogActivity"
                android:exported="false" >
            </activity>

            <activity
                android:name="com.innoquant.moca.ui.WebPageActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            </activity>

            <!-- Include version Google Play Services -->
            <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        </config-file>   

        <!-- MOCA SDK -->
        <resource-file src="libs/moca-android-sdk-1.8.4.aar" target="libs/moca-android-sdk-1.8.4.aar" />
        <source-file src="src/android/MOCAPlugin.java" target-dir="src/com/innoquant/moca/phonegap" />

    </platform>
    
    <!-- ios -->
    <platform name="ios">
        <info>                                        
            - Add a new key in your "YOUR-APP-NAME-Info.plist" as follows:
             key: NSLocationAlwaysUsageDescription value: --string describing why you need location services--

             Example:

             key: NSLocationAlwaysUsageDescription, value: This app will use your location information to identify nearby places and to notify you about available proximity experiences. 

             IMPORTANT: If this key is not present, Proximity Experiencies won't work at all.

        </info>
        <config-file target="config.xml" parent="/widget">
             <feature name="MOCAPlugin">
                <param name="ios-package" value="MOCAPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string></string>
        </config-file>

        <header-file src="src/ios/MOCAPlugin.h" />
        <source-file src="src/ios/MOCAPlugin.m" />

        <!-- Public header files -->
        <header-file src="src/ios/MOCA/Header/MOCA.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAAction.h"  />
        <header-file src="src/ios/MOCA/Header/MOCABeacon.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAConfig.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAEvent.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAInbox.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAInstance.h"  />
        <header-file src="src/ios/MOCA/Header/MOCALog.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAPlace.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAPropertyContainer.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAProximityDelegate.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAProximityService.h"  />
        <header-file src="src/ios/MOCA/Header/MOCASerializable.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAUser.h"  />
        <header-file src="src/ios/MOCA/Header/MOCAZone.h"  />

        <!-- MOCA SDK Library Resource files -->
        <source-file src="src/ios/MOCA/libMOCALib.a" framework="true"/>

        <!-- system frameworks -->
        <framework src="libsqlite3.dylib" />
        <framework src="CFNetwork.framework" weak="true" />
        <framework src="Foundation.framework" weak="true" />
        <framework src="Security.framework" weak="true" />
        <framework src="MobileCoreServices.framework" weak="true" />
        <framework src="SystemConfiguration.framework" weak="true" />
        <framework src="UIKit.framework" weak="true" />
        <framework src="CoreTelephony.framework" weak="true" />
        <framework src="MobileCoreServices.framework" weak="true" />
        <framework src="CoreLocation.framework" weak="true" />
        <framework src="PassKit.framework" weak="true" />
		<framework src="AudioToolbox.framework" weak="true" />
		<framework src="CoreBluetooth.framework" weak="true" />
		<framework src="UIKit.framework" weak="true" />

    </platform>
</plugin>
